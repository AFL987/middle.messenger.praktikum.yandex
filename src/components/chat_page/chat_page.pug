include ../chat/chat.pug
include ../input/input.pug
include ../button/button.pug
include ../profile_data_line/profile_data_line.pug
include ../empty_space/empty_space.pug
include ../profile_data_line_change/profile_data_line_change.pug

.chat_page


    <!-- ЧАТ -->
    .chat_container
        .chat_list
            .profile_open_container
                .profile_open#profile_open Профиль &gt;
            .chat_search_container
                form
                    input.chat_search(type="text" placeholder="Поиск")
            +chat("Андрей", "11:44")
            +chat("Владими", "25:77")
            +chat("Еще какая-то хрень", "пн")
            +chat("и курсы на мидла...", "январь 21")
        .chat_field
            .chat_field_header#chat_field_header
                .chat_field_header_avatar
                .chat_field_header_title#chat_field_header_title title
                .chat_field_header_pointers#chat_field_header_pointers
                    .chat_field_header_point
                    .chat_field_header_point
                    .chat_field_header_point
            .chat_field_main_field
                .chat_field_modal#chat_field_modal
                    .chat_field_modal_add_user#chat_field_modal_add_user Добавить пользователя
                    .chat_field_modal_delete_user#chat_field_modal_delete_user Удалить пользователя


    <!-- ПРОФИЛЬ -->
    .profile_container#profile_container
        .back_chat_container
            .back_chat_arrow#back_chat_arrow
                img(src="./../static/images/arrow_left.svg")
        .profile
            .profile_data_container
                .profile_avatar
                    img(src="./../static/images/default_avatar.svg")
                .profile_data_container_for_line#profile_data_container_for_line_main
                    .profile_name.title_middle Александр
                    +emptySpace("50")
                    +profileDataLine("Почта", "fyu678@mail.ru")
                    +profileDataLine("Логин", "fyu678")
                    +profileDataLine("Имя", "Петр")
                    +profileDataLine("Фамилия", "Михайлов")
                    +profileDataLine("Имя в чате", "Петр")
                    +profileDataLine("Телефон", "+7 (909) 967 30 30")
                    +emptySpace("50")
                    .profile_data_change_link.text_l#profile_data_change_link_data Изменить данные
                    .profile_data_change_link.text_l#profile_data_change_link_password Изменить пароль
                    .log_out_of_profile.text_l#log_out_of_profile Выйти
                .profile_data_container_for_line
                    form
                        +emptySpace("94")
                        +profileDataLineChange("Почта", "fyu678@mail.ru", "email", "email")
                        +profileDataLineChange("Логин", "fyu678", "login", "text")
                        +profileDataLineChange("Имя", "Петр", "first_name", "text")
                        +profileDataLineChange("Фамилия", "Михайлов", "second_name", "text")
                        +profileDataLineChange("Имя в чате", "Петр", "display_name", "text")
                        +profileDataLineChange("Телефон", "+7 (909) 967 30 30", "phone", "tel")
                        +emptySpace("50")
                        +button("Сохранить", "registration", "zero")
                        +button("Отменить", "exit", "zero")
                .profile_data_container_for_line
                    form
                        +emptySpace("94")
                        +profileDataLineChange("Старый пароль", "666666666", "oldPassword", "password")
                        +profileDataLineChange("Старый пароль", "666666666", "newPassword", "password")
                        +profileDataLineChange("Старый пароль", "666666666", "password", "password")
                        +button("Сохранить", "registration", "zero")
                        +button("Отменить", "exit", "zero")

    <!-- ПОП АП -->
    .veil_container#veil_container
        .veil_is_casually_thrown_on_a_chair#veil_is_casually_thrown_on_a_chair
        #modal_add_user
            include ../modal/modal.pug
                block content
                     .title_middle.text_center Добавить пользователя
                     +input("login", "text", "input_text", "Логин")
                     +button("Добавить", "registration")
        #modal_delete_user
            include ../modal/modal.pug
                block content
                     .title_middle.text_center Удалить пользователя
                     +input("login", "text", "input_text", "Логин")
                     +button("Удалить", "registration")


